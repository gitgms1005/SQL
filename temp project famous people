CREATE TABLE cartoons (id INTEGER PRIMARY KEY,
    name TEXT,
    known_for TEXT,
    eats TEXT,
    home TEXT);

INSERT INTO cartoons VALUES(1,"bugs_bunny", "hyjinx", "carrots", "bugs_house");
INSERT INTO cartoons VALUES(2,"daffy_duck", "misadventures", "sandwiches", "bugs_house");
INSERT INTO cartoons VALUES(3,"roadrunner", "running", "bird_seed", "desert");
INSERT INTO cartoons VALUES(4,"wile_e_coyote", "antagonist", "birds", "desert");
INSERT INTO cartoons VALUES(5,"porky", "annunciation", "cotton_candy", "porkys_house");


CREATE TABLE shorts (id INTEGER PRIMARY KEY,
    title TEXT,
    starring TEXT,
    length INTEGER,
    year INTEGER);
    
INSERT INTO shorts VALUES(1,"aint_that_ducky", "daffy_duck", 7, 1945);
INSERT INTO shorts VALUES(2,"tick_tock_tuckered", "porky", 7, 1944);
INSERT INTO shorts VALUES(3,"buckaroo_bugs", "bugs_bunny", 9, 1944);
INSERT INTO shorts VALUES(4,"draftee_daffy", "daffy_duck", 7, 1945);

/* basic queries*/
SELECT * FROM cartoons;
SELECT * FROM shorts;

/* which ones live in the desert*/
SELECT name,home FROM cartoons WHERE home="desert";

/* how many shorts are under 8 minutes*/
SELECT title,length FROM shorts WHERE length<8;

/* what characters who live in bugs house are in shorts less than 8 minutes*/
SELECT name,length,title FROM cartoons, shorts
    WHERE home="bugs_house" AND length<8
    GROUP BY name, length;
    
